
<div class="container text-center">


<div class="row">
<h1 ><%= @user.first_name %></h1>
<%= image_tag @user.picture, class:"avatar"%>
</div>

<p> <%= @user.city %></p>

<p><%= @user.description %></p>

</div>

<%if user_signed_in? %>

  <% if @user == current_user %>

      <%= link_to "Modifiez votre profil", edit_user_path(@user) %>
      <h2>Mes demandes</h2>

      <% current_user.demands.each do |d| %>
      <div class="list-demands ">
        <div class="expert-picture">
         <p><%= d.expert.picture %></p>
        </div>
        <div class="expert-first_name">
          <p>Demande a <%= d.expert.first_name %></p>
        </div>
        <div class="planned-for">
          <p><%= d.planned_for %></p>
        </div>
        <div class="comments">
          <p><%= d.comments %></p>
        </div>
        <div class="booking_status">
          <p><%= d.booking_status %></p>
        </div>
        <div>
        <%= link_to "Cancel your booking",user_booking_path(current_user, d), method: :delete, class: "btn btn-danger" %>
         </div>
      <% end %>


    <%if current_user.expert == "1"%>



          <h2>Mes missions</h2>
          <% current_user.missions.each do |mission| %>
          <div class="list missions ">
            <div class="client picture">
             <p><%= mission.client.picture %></p>
            </div>
            <div class="client-first_name">
            <p>Demande de <%= mission.client.first_name %></p>
            </div
            <div class="planned-for">
            <p><%= mission.planned_for %></p>
            </div>
            <div class="comments">
            <p><%= mission.comments %></p>
            </div>
            <div class="booking_status">
            <p><%= mission.booking_status %></p>
            </div>
            <div>
              <%= link_to "Accept your booking",accept_booking_user_booking_path(current_user, mission), method: :post, class: "btn btn-primary" %>
            </div>
            <div>
            <%= link_to "Decline your booking",decline_booking_user_booking_path(current_user, mission), method: :post, class: "btn btn-danger" %>
            </div>

          <% end %>
        <% end %>
    </div>

  <% end %>

<% else %>
  <p>Afficher rating et comments</p>
<%end%>
